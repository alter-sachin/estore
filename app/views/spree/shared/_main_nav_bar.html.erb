<nav class="col-md-12">
  <div id="main-nav-bar" class="navbar">
    <ul class="nav navbar-nav" data-hook>
      <li id="home-link" data-hook><%= link_to Spree.t(:home), spree.root_path %></li>
	    
</ul>
     <div class="btn-group">
      <button class="btn" onMouseOver="show_sidebar()"  >Left</button>
    </div>
       <script type="text/javascript">
function show_sidebar()
{
document.getElementById('sidebar').style.display="block";
}

function hide_sidebar()
{
document.getElementById('sidebar').style.display="none";
}
</script>
	<ul id="sidebar" class="dropdown-menu" onMouseOver="show_sidebar()" onMouseOut="hide_sidebar()" data-hook>
  		<%= yield :sidebar %>
	</ul>
    <ul class="nav navbar-nav navbar-right" data-hook>
      <li id="link-to-cart" data-hook>
        <noscript>
          <%= link_to Spree.t(:cart), '/cart' %>
        </noscript>
        &nbsp;
      </li>
      <script>Spree.fetch_cart()</script>
    </ul>
  </div>
